    <select class="form-control" name="gender">
      <option value="Masculino" <% if(customer.gender=="Masculino" ){ %>selected <% } %> >Masculino</option>
      <option value="Feminino" <% if(customer.gender=="Feminino" ){ %>selected <% } %> >Feminino</option>
    </select>
  </div>
</div>